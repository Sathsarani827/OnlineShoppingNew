<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />



    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:id="@+id/vegetables"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/veg"
            />

        <ImageView
            android:id="@+id/fruits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fruits"
            />

        <ImageView
            android:id="@+id/meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/meat"
            />

        <ImageView
            android:id="@+id/fish"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/fish"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/beverages"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/beverages"
            />

        <ImageView
            android:id="@+id/chilled"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/chilled"
            />

        <ImageView
            android:id="@+id/beans"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/beens"
            />

        <ImageView
            android:id="@+id/tobacco"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/tobacco"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <ImageView
            android:id="@+id/pharmacy"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pharmacy"
            />

        <ImageView
            android:id="@+id/stationary"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:src="@drawable/stationary"
            />

        <ImageView
            android:id="@+id/household"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/household"
            />

        <ImageView
            android:id="@+id/bakery"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:src="@drawable/bakery"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

    </LinearLayout>



</RelativeLayout>